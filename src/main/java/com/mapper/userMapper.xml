<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.UserMapper">
	<!-- 解决表名与字段不匹配 -->
	<resultMap type="User" id="userResultMap">
		<id property="id" column="userid"/>
		<result property="username" column="username"/>
		<result property="password" column="password"/>
	</resultMap>
	<sql id="Base_Column_List">
		id,username,password
	</sql>
	<select id="checkUserByUsername"  resultType="User" parameterType="java.lang.String">
	 select * from user WHERE username=#{username}
	</select>

	<insert id="addUser"   parameterType="User">
		insert into user(username, password) values(#{username}, #{password})
	</insert>
	<select id="checkUsernamePassword" resultType="User" parameterType="User">
		select * from user WHERE username=#{username} AND password=#{password}
	</select>
	<select id="findAllUser" resultMap="userResultMap" resultType="User">
		select * from user
	</select>

</mapper>
